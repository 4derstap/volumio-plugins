        "type": "controller",
        "endpoint": "miscellanea/onkyo_control",
        "method": "saveConnectionConfig"
      },
      "saveButton": {
        "label": "TRANSLATE.SAVE",
        "data": [
          "autolocate",
          "receiverIP",
          "receiverPort"
        ]
      },
      "content": [
        {
          "id": "autolocate",
          "element": "switch",
          "label": "TRANSLATE.AUTOLOCATE",
          "doc": "TRANSLATE.AUTOLOCATE_DOC",
          "value": true
        },
        {
          "id": "receiverIP",
          "type": "text",
          "element": "input",
          "label": "TRANSLATE.RECEIVER_IP",
          "doc": "TRANSLATE.RECEIVER_IP_DOC",
          "value": "",
          "visibleIf": {
            "field": "autolocate",
            "value": false
          }
        },
        {
          "id": "receiverPort",
          "type": "text",
          "element": "input",
          "label": "TRANSLATE.RECEIVER_PORT",
          "doc": "TRANSLATE.RECEIVER_PORT_DOC",
          "value": "60128",
          "visibleIf": {
            "field": "autolocate",
            "value": false
          }
        }
      ]
    },
    {
      "id": "section_actions",
      "element": "section",
      "label": "TRANSLATE.ACTION_CONFIGURATION",
      "icon": "fa-wrench",
      "onSave": {
        "type": "controller",
        "endpoint": "miscellanea/onkyo_control",
        "method": "saveActionConfig"
      },
      "saveButton": {
        "label": "TRANSLATE.SAVE",
        "data": [
          "poweron",
          "standby",
          "standbyDelay",
          "setVolume",
          "setVolumeValue"
        ]
      },
      "content": [
        {
          "id": "poweron",
          "element": "switch",
          "label": "TRANSLATE.POWERON",
          "doc": "TRANSLATE.POWERON_DOC",
          "value": true
        },
        {
          "id": "standby",
          "element": "switch",
          "label": "TRANSLATE.STANDBY",
          "doc": "TRANSLATE.STANDBY_DOC",
          "value": true
        },
        {
          "id": "standbyDelay",
          "type": "number",
          "element": "input",
          "label": "TRANSLATE.STANDBY_DELAY",
          "doc": "TRANSLATE.STANDBY_DELAY_DOC",
