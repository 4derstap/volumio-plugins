          "visibleIf": {
            "field": "standby",
            "value": true
          }
        },
        {
          "id": "setVolume",
          "element": "switch",
          "label": "TRANSLATE.SET_VOLUME",
          "doc": "TRANSLATE.SET_VOLUME_DOC",
          "value": false
        },
        {
          "id": "setVolumeValue",
          "type": "number",
          "element": "input",
          "label": "TRANSLATE.SET_VOLUME_VAL",
          "doc": "TRANSLATE.SET_VOLUME_VAL_DOC",
          "value": 20,
          "visibleIf": {
            "field": "setVolume",
            "value": true
          }
        }
      ]
    }
